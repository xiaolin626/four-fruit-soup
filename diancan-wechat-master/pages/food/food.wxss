}
.order-item{
  margin-bottom: 15rpx;
  color: #777777;
  background-color: #fff;
  font-size: 28rpx;
}
.order-item:last-child{
  margin-bottom:0;
}
.order-header{
  margin-left: 30rpx;
  border-bottom: 1rpx solid #EDEDED;
  padding: 25rpx 0;
}
.order-header text:last-child{
  margin-left: 10rpx;
}
